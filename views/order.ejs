<!DOCTYPE html>
<html>
<%- include partials/head.ejs %>
<body>
<style>
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>
<div class="container">
    <div class="page-header">
        <h4>
            <%- include partials/welcome.ejs %>
        </h4>
        <ul class="breadcrumb">
            <li>點餐</li>
        </ul>
    </div>

    <div class="row">
        <% if (typeof error !== 'undefined') { %>
        <div class="col-sm-12">
            <div class="label label-danger">
                <%- error.message %>
            </div>
        </div>
        <% } %>
        <div class="col-sm-12">

                <!-- Nav tabs -->
                <ul class="nav nav-pills " role="tablist">
                    <li role="presentation" class="active"><a href="#sp" aria-controls="sp" role="tab" class="list"
                                                                 data-toggle="tab">特餐</a></li>

                    <li role="presentation"><a href="#rice" aria-controls="rice" role="tab" data-toggle="tab" class="list">米飯</a>
                    </li>
                    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab" class="list">麵食</a>
                    </li>
                    <li role="presentation"><a href="#dumplings" aria-controls="dumplings" role="tab" data-toggle="tab" class="list">水餃</a>
                    </li>
                    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab"
                                               data-toggle="tab" class="list">炸物</a></li>
                    <li role="presentation"><a href="#settings" aria-controls="settings" role="tab"
                                               data-toggle="tab" class="list">湯</a></li>
                    <li role="presentation"><a href="#drink" aria-controls="drink" role="tab"
                                               data-toggle="tab" class="dropdown open list" class="list">飲料</a></li>
                </ul>

            <form action="/order" method="post">
                <table class="table table-bordered table-condensed table-striped">
                    <thead>
                    <tr>
                        <th style="width: 200px;">Photo</th>
                        <th style="width: 120px;">Name</th>
                        <th style="width: 100px;">Price</th>
                        <th style="width: 100px;">Remain</th>
                        <th>Amount</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% items.forEach(function(item) { %>
                    <tr>
                        <td>
                            <% if(item.photo) { %>
                            <img src="/photo/<%- item.photo %>" class="item-photo">
                            <% } else { %>
                            <img src="/img/default.jpg" class="item-photo">
                            <% } %>
                        </td>
                        <td>
                            <%- item.name %>
                        </td>
                        <td>
                            <p>
                                BIG: <%- item.price.big %>
                            </p>
                            <p>
                                SMALL: <%- item.price.small %>
                            </p>
                        </td>
                        <td>
                            <p>
                                BIG: <%- item.amount.big %>
                            </p>
                            <p>
                                SMALL: <%- item.amount.small %>
                            </p>
                        </td>
                        <td>
                            <input type="hidden" value="<%- item.id %>" name="id">
                            <input type="hidden" value="<%- item.amount.big %>" name="maxBig">
                            <input type="hidden" value="<%- item.amount.small %>" name="maxSmall">
                            <input type="hidden" value="<%- item.name %>" name="name">

                            <div class="form-group input-group">
                                <span class="input-group-addon">BIG</span>
                                <input class="form-control spinner" type="number"
                                       max="<%- item.amount.big %>" name="amountBig"
                                       value="0" readonly="readonly">
                            </div>
                            <div class="form-group input-group">
                                <span class="input-group-addon">SMALL</span>

                                <input class="form-control spinner" type="number" max="<%- item.amount.small %>"
                                       name="amountSmall" value="0" readonly="readonly">

                            </div>
                        </td>
                    </tr>
                    <% }) %>
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-sm-12 clearfix">
                        <button class="btn btn-default pull-right">ORDER</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


</body>
<link rel='stylesheet' href='/sheetstyle/jquery.bootstrap-touchspin.min.css' />
<script src="javascripts/jquery.bootstrap-touchspin.min.js"> </script>
<script>


    $(function () {
        $(".spinner").TouchSpin({
            initval: 0,
            min: 0,
            postfix_extraclass: "btn btn-default"

        });

    });


</script>

</html>
